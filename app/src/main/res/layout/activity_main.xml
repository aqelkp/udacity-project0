<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="in.aqel.nanodegreeprojects.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView" />

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/bSpotify"
        android:background="@color/udacity_orange"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/bScores"
        android:background="@color/udacity_orange"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/bLib"
        android:background="@color/udacity_orange"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/bBuild"
        android:background="@color/udacity_orange"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/bReader"
        android:background="@color/udacity_orange"
        android:layout_gravity="center_horizontal" />


    <Button
        android:layout_marginTop="8dp"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="CAPSTONE : MY OWN APP"
        android:id="@+id/bCapstone"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
